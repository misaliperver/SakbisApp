<% if(typeof peer === "undefined"){%>
    <%= msg %>
<%}else{%>
    <div class="container">
            <div class="row progress mb-2">
                    <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style=<%= 'width:' + 10*len + '%'%> aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><%= 'Bu profilin %' + 10*len + ' tamamlandı.'%></div>
                </div>
        <div class="row">
            <div class="col-12">
            </div>
        </div>
            <div class="row mb-3">
                <div class="col-md-3" style="text-align: center">
                    <div><img class="rounded-circle" width="200px" height="200px" src="<%if(peer.userimg){%><%='/userimg/' + peer.userimg + '.png'%><%}else{%>/userimg/unknow.png<%}%>"/> </div>
                </div>
                <div class="col-md-6">     
                    <ul class="list-group list-inline">
                        <li class="list-group-item"><a style="color:rgb(9, 2, 70); font-size: 18px;"><strong>Sakarya Üniversitesi</strong></a></li>
                        <li class="list-group-item"><a style="color:rgb(15, 121, 15)"><strong><%=peer.ad%> <%=peer.soyad%> </strong></a></li>
                        <li class="list-group-item"><a><%=peer.email%> </a></li>
                        <li class="list-group-item"><a>bio: <small><%=peer.bio%></small></a></li>
                        
                    </ul>         
                </div>
                <div class="col-md-3">     
                        <ul class="list-group list-inline">
                            <li class="list-group-item"><a style="color:rgb(9, 2, 70); font-size: 18px;"><small><i class="fas fa-book"></i> <%=peer.unibolum%></small></a></li>
                            <li class="list-group-item"><a style="color:rgb(15, 121, 15)"><i class="fas fa-user-graduate"></i> <%=peer.username%></strong></a></li>
                            <li class="list-group-item"><a><i class="fas fa-phone-volume"></i> <%=peer.telno%> </a></li>
                            <li class="list-group-item"><a><strong><i class="fas fa-transgender"></i> <%=peer.yas%> - <%=peer.cinsiyet%></strong></a></li>
                            
                        </ul>         
                    </div>

            </div>
            <div class="row">
                <table class="table" style="text-align:center">
                    <thead class="bg-success">
                        <tr class="d-flex"><th class="col-2">Saat/Gün<button id="btn_WithPeer" class="btn btn-warning" data-toggle="modal" data-target="#karsilastirMODAL">Karşılaştır</button></th><th class="col-2">Pazartesi</th><th class="col-2">Salı</th><th class="col-2">Çarşamba</th><th class="col-2">Perşembe</th><th class="col-2">Cuma</th></tr>
                    </thead>
                </table>
            </div>
            <div class="row" style="margin-top:-18px;height: 285px; overflow: auto">
                    <table class="table">
                        <tbody id="tableMatris" style="text-align:center">
                            <% if(typeof peer.dersProgrami !== "undefined"){ for(var i=0; i<15; i++){ %>
                                    <tr class="d-flex"><th class="col-2 bg-secondary text-light" scope="row"  style="text-align:left"><%=i+7%>:00</th>
                                <%for(var j=0; j<5; j++){
                                        if(peer.dersProgrami.matris[j][i] == true){%>
                                        <td id="" class="col-2"  style="background-color: yellow">n1</td>
                                        <%}else{%>
                                        <td id="" class="col-2"  >n1</td>
                                <%}}}}%>
                           
                        </tbody>
                    </table>
                </div>
        </div>
<%}%>

<!-- Modal -->
<div  class="modal fade" id="karsilastirMODAL" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">
            <div class="modal-header">
                    <img src="/img/uni.png"/ style="width:30px"><h5 class="modal-title" id="exampleModalLabel">İkili Programları</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
                <div class="modal-body">
                        
                    <div style="margin-top:-18px;height: 500px; overflow: auto">
                        <table class="table">
                            <thead class="bg-success"  style="text-align:center">
                                <tr class="d-flex"><th class="col-2">Saat/Gün</th><th  colspan=2 class="col-2">Pazartesi</th><th class="col-2">Salı</th><th colspan=2 class="col-2">Çarşamba</th><th colspan=2 class="col-2">Perşembe</th><th colspan=2 class="col-2">Cuma</th></tr>
                            </thead>
                            <tbody id="modalTableMatris"  style="text-align: justify">
                                
                            </tbody>
                        </table>
                    </div>
            </div>
            
          </div>
        </div>
      </div>
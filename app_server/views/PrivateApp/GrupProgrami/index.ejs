<div class="container">
    <div class="row mb-3">
        <% if(typeof gruplar !== 'undefined'){%>   
         <a>Burada sizin oluşturduğunuz gruplar listelendi. Yenisini oluşturmak ister misin?</a>
        <% }else{%>
         <a>Oluşturmuş olduğun bir grup yok. Hemen oluşturmak ister misin?</a>
        <% }%>
        <a class="btn btn-succesfull" href="/userApp/grup/olustur">Yeni Grub Oluştur</a> 
    </div>
    <div class="row">
    <% if(typeof gruplar !== 'undefined'){%>
        <% gruplar.forEach(function(grup) { %>
            <div id="idcard" class="card mb-3" onclick="location.href='/userApp/grup/<%= grup.programId%>'">
                <img class="card-img-top" src="/img/image-780x180.jpg" alt="Card image cap">
                <div class="card-body">
                    <span class="badge badge-pill badge-danger"><%= grup.interval%> saat için</span>
                    <% if(grup.secret == false){%><span class="badge badge-pill badge-success ">Açık Link</span><% }else{%><span class="badge badge-pill badge-warning ">Gizli Link</span><% }%>
                    <h5 class="card-title text-primary float-left"><%= grup.title%> &nbsp; &nbsp;</h5> 
                    <p class="card-img-overlay "><a class="float-right "><%= grup.startTime.getDay()%>/<%= grup.startTime.getMonth()%>/<%= grup.startTime.getFullYear()%> - <%= grup.finishTime.getDay()%>/<%= grup.finishTime.getMonth()%>/<%= grup.finishTime.getFullYear()%></a></p>
                    <p class="card-text" style="clear: both;"><%= grup.issue%></p>
                    <p class="card-text"><small class="text-muted">kimlik: <i><%= grup.programId%></i></small></p>
                </div>
            </div>
        <% }); %>
    <% }%>
    </div>
</div>
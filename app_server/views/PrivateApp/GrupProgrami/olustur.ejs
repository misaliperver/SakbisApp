<div class="container">
    <div class="row">
        <div class="col-md-2"></div><!--Soldan 2 birim kaydır-->
        <form class="col-md-8" action="/userApp/grup/olustur" method="POST">
            <div class="form-group">
                <label for="inputkimlik"><strong>Program Kimliği </strong><i>örn: <%= user.username%>-<%=ras%></i></label>
            </div>
            <div class="form-group">
                <label for="inputTitle">Programın Adı</label>
                <input name="title" type="text" class="form-control" id="inputTitle" placeholder="örn: Ders Uzatma, BSM-101, Sevgilimle Boş vakitler...">
            </div>
            <div class="form-group">
                    <label for="inputIssue">Açıklama</label>
                    <input name="issue" type="text" class="form-control" id="inputIssue" placeholder="örn: Sevgili öğrenciler bugün okula gelemeyeceğim için..">
                </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputStart">Başlangıç Tarihi</label>
                    <input name="startTime" class="form-control" type="datetime-local" value="<%= date%>" id="inputStart">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputFinish">Bitiş Tarihi</label>
                    <input name="finishTime" class="form-control" type="datetime-local" value="<%= date%>" id="inputFinish">
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group col-md-9">
                <label for="inputPeople">Kişiler</label>
                <input name="people" type="text" class="form-control" id="inputPeople" placeholder="örn: b111410001, b111410006">
                </div>
                <div class="form-group col-md-3">
                <label for="inputInterval">Saat Aralığı</label>
                <select name="interval" id="inputInterval" class="form-control">
                    <option selected>Seç..</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                    <option>7</option>
                    <option>8</option>
                    <option>9</option>
                    <option>10</option>
                </select>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                <input name="secret" class="form-check-input" type="checkbox" id="inputSecret">
                <label class="form-check-label" for="gridCheck">
                    Gizli Link
                </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Oluştur/Karşılaştır</button>
        </form>
        <div class="col-md-2"></div><!--Sağdan 2 birim kaydır-->
    </div>
    <div class="row">
        <div class="col-md-2"></div><!--Soldan 2 birim kaydır-->
        <div class="col-md-8">
        <% if(typeof hatalar !== 'undefined'){%>
            <a><span class="badge badge-danger">Hata Var! </span></a>
            <ul>
            <% hatalar.forEach(function(hatalar) { %>
                <li><a class="text-danger"><%= hatalar.msg %></a></li>
            <% }); %>
            </ul>
        <% }%>
        </div>
        <div class="col-md-2"></div><!--Sağdan 2 birim kaydır-->
    </div>
</div>